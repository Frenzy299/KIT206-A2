<Window x:Class="GMISwpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GMISwpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Grid>
        <ListBox x:Name="nameList" HorizontalAlignment="Left" Height="399" Margin="477,10,0,0" VerticalAlignment="Top" Width="305"
                 ItemsSource="{Binding Source={StaticResource StudentList}}" SelectionChanged="ListBox_SelectionChanged"/>
        <Button x:Name="removeStudent" Content="Group 1" HorizontalAlignment="Left" Height="29" Margin="374,380,0,0" VerticalAlignment="Top" Width="98" Click="BtnRemoveStudent"/>
        <StackPanel x:Name="detailsPanel" HorizontalAlignment="Left" Height="196" Margin="103,96,0,0" VerticalAlignment="Top" Width="195">
            <Label Content="Name:"/>
            <Label Content="{Binding Path=GivenName}"/>
            <Label Content="ID:"/>
            <Label Content="{Binding Path=StudentId}"/>
            <Label Content="Email:"/>
            <Label Content="{Binding Path=Email}"/>
        </StackPanel>

    </Grid>
</Window>
