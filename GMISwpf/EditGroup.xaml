<Page x:Class="GMISwpf.EditGroup"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GMISwpf"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="EditGroup">

    <Grid>
        <Button x:Name="Back" Content="Back" HorizontalAlignment="Left" Height="23" Margin="55,36,0,0" VerticalAlignment="Top" Width="57" Click="Back_Click"/>
        <TextBox x:Name="GroupName" HorizontalAlignment="Left" Height="22" Margin="243,122,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="264"/>
        <Label Content="Group name" HorizontalAlignment="Left" Height="29" Margin="243,93,0,0" VerticalAlignment="Top" Width="207"/>
        <Label x:Name="GroupNameLabel" Content="Edit group name" HorizontalAlignment="Left" Height="35" Margin="243,53,0,0" VerticalAlignment="Top" Width="264" FontWeight="Bold" FontSize="16"/>
        <Button x:Name="SaveChanges" Content="Save changes" HorizontalAlignment="Left" Height="27" Margin="299,177,0,0" VerticalAlignment="Top" Width="151" Click="SaveChanges_Click"/>
    </Grid>
</Page>
