<Page x:Class="GMISwpf.UserSelection"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GMISwpf"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="UserSelection">

    <Grid>
        <ListBox x:Name="studentList" HorizontalAlignment="Left" Height="201" Margin="294,144,0,0" VerticalAlignment="Top" Width="216"
                 ItemsSource="{Binding Source={StaticResource StudentList}}" SelectionChanged="studentList_SelectionChanged"/>
        <Label Content="Select a student to log in" HorizontalAlignment="Left" Height="28" Margin="329,111,0,0" VerticalAlignment="Top" Width="144"/>
        <Button x:Name="goButton" Content="Go" HorizontalAlignment="Left" Height="36" Margin="369,350,0,0" VerticalAlignment="Top" Width="71" Click="Button_Click"/>

    </Grid>
</Page>
